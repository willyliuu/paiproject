            <script>
                Swal.fire({
                  icon: 'error',
                  title: 'ERROR',
                  text: `<%= error %>`
                })
            </script>
        <% } %> 
        <% if(err) { %>
            <script>
                Swal.fire({
                  icon: 'error',
